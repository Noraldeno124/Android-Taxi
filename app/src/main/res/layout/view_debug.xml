<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/text_geofences"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_yellow"
          android:textColor="@android:color/black"
          />

      <TextView
          android:id="@+id/text_location"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_cyan"
          android:textColor="@android:color/white"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/text_state"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_gray"
          android:textColor="@android:color/white"
          />

      <TextView
          android:id="@+id/text_gtms_calls"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_purple"
          android:textColor="@android:color/white"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/text_cid"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_blue"
          android:textColor="@android:color/white"
          />

      <TextView
          android:id="@+id/text_avi"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_pink"
          android:textColor="@android:color/white"
          />

    </LinearLayout>

    <TextView
        android:id="@+id/text_console"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="bottom"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/btn_debug1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/debug_blue"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

      <Button
          android:id="@+id/btn_debug2"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/debug_green"
          android:textColor="@android:color/white"
          />

      <Button
          android:id="@+id/btn_debug3"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@android:color/black"
          android:textColor="@android:color/white"
          />

    </LinearLayout>

  </LinearLayout>


  <include
      android:id="@+id/reachability"
      layout="@layout/view_reachability"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      />

</FrameLayout>
